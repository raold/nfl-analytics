# NFL Analytics Environment Configuration Template
# Copy to .env and customize for your machine

# Machine Identification
MACHINE_ID=auto                    # auto-detect or set manually (e.g., desktop-4090, laptop-m4)
HARDWARE_PROFILE=auto              # auto-detect or set: gpu_high, gpu_standard, cpu_arm_high, cpu_x86

# Environment
NFL_ANALYTICS_ENV=development      # development, production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_MAX_MEMORY=8gb

# Google Drive Sync
GOOGLE_DRIVE_SYNC_INTERVAL=300     # seconds between syncs

# Compute Settings
MAX_CONCURRENT_TASKS=4             # max parallel tasks
TASK_TIMEOUT_HOURS=6               # task timeout
ENABLE_GPU=true                    # enable GPU acceleration

# Logging
LOG_LEVEL=INFO                     # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true

# Performance Tuning
ENABLE_CACHING=true
CACHE_SIZE_MB=1024
BACKGROUND_SYNC=true

# Development Settings (only for NFL_ANALYTICS_ENV=development)
RELOAD_ON_CHANGE=true
DEBUG_MODE=false
MOCK_GPU=false